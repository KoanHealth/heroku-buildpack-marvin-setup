#!/usr/bin/env ruby

# sync output
$stdout.sync = true

# Runs the profile files for the 'buildpack' located at the deploy position
home = ENV['HOME']
begin
  ENV['HOME'] = File.join(home, 'deploy')
  Dir.glob(File.join(ENV['HOME'], '.profile.d', '*')) do |file| 
    `#{file}` if File.file?(file)
  end
ensure
  ENV['HOME'] = home
end